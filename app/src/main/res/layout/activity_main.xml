<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">






    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/et_edittext_id"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_edittext_id"
        android:layout_marginTop="5dp"
        android:height="20dp"
        android:id="@+id/tv_textview_id"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ to ksh"
        android:layout_below="@+id/tv_textview_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/bt_dollartoshilling_id"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ksh to $"
        android:id="@+id/bt_shillingtodollar_id"
        android:layout_below="@+id/et_edittext_id"
        android:layout_marginTop="75dp"
        android:layout_marginStart="250dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eur to ksh"
        android:id="@+id/bt_eurotoshilling_id"
        android:layout_below="@+id/bt_dollartoshilling_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ksh to eur"
        android:id="@+id/bt_shillingtoeuro_id"
        android:layout_below="@+id/bt_shillingtodollar_id"
        android:layout_marginStart="250dp"
        android:layout_marginTop="20dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ to eur"
        android:layout_below="@+id/bt_eurotoshilling_id"
        android:layout_marginStart="150dp"
        android:id="@+id/bt_dollartoeuro_id"

        />
</RelativeLayout>